    {
      "modifiers": [
        {
          "exclude": [
            ".git/**",
            ".idea/**",
            "*.sln",
            ".gitignore"
          ]
        },
        {
          "condition": "(!includeTest)",
          "exclude": [
            "CleanArchitectureTemplate.UseCaseFamily.*.Test/**"
          ]
        }
      ]
    }
